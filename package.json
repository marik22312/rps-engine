{
  "name": "rps-engine",
  "version": "0.1.0",
  "description": "Rock Paper Scissors Engine",
  "main": "index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/marik22312/rps-engine.git",
  "author": "mark22312 <mark22312@gmail.com>",
  "license": "MIT",
  "private": true,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
	"test": "jest",
	"start": "node ./lib/index.js",
    "build": "tslint -p tsconfig.json && rm -rf lib && tsc -p tsconfig.json",
